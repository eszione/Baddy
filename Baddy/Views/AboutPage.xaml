<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Baddy.Views.AboutPage"
             Title="{Binding Title}">
    <Grid BackgroundColor="White">
        <ScrollView>
            <StackLayout Padding="10">
                <Label Text="Welcome" FontSize="22" FontFamily="Bold" HorizontalOptions="Center">
                    <Label.Triggers>
                        <MultiTrigger TargetType="Label">
                            <MultiTrigger.Conditions>
                                <BindingCondition Binding="{Binding LoggedIn}" Value="True" />
                                <BindingCondition Binding="{Binding Profile.Name, Converter={StaticResource NotEmptyStringToBool}}" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Text" Value="{Binding Profile.Name, StringFormat='Welcome {0}'}" />
                        </MultiTrigger>
                    </Label.Triggers>
                </Label>
            </StackLayout>
        </ScrollView>
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                           Color="Green"
                           HeightRequest="40"
                           HorizontalOptions="CenterAndExpand"
                           VerticalOptions="CenterAndExpand" />
    </Grid>
</ContentPage>
